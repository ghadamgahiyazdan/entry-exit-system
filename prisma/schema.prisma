generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Employee {
  id         Int       @id @default(autoincrement())
  name       String
  employeeId String    @unique
  is_delete  Boolean   @default(false)
  shifts     Shift[]
  deleted_at DateTime?
  createdAt  DateTime  @default(now())
}

model Shift {
  id          Int        @id @default(autoincrement())
  title       String // e.g. "شیفت صبح", "شیفت عصر", "شیفت شب"
  description String
  is_delete   Boolean    @default(false)
  deleted_at  DateTime?
  employees   Employee[]
  createdAt   DateTime   @default(now())
}

model Report {
  id Int @id @default(autoincrement())

  status String // "حاضر", "غایب", "مرخصی", "تأخیر"

  employeeId Int

  shiftId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  is_delete  Boolean   @default(false)
  deleted_at DateTime?

  @@index([employeeId, shiftId]) // For faster queries
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Employee {
  id         Int      @id @default(autoincrement())
  name       String
  employeeId String   @unique
  shifts     Shift[]
  reports    Report[]
  createdAt  DateTime @default(now())
}

model Shift {
  id        Int        @id @default(autoincrement())
  title     String // e.g. "شیفت صبح", "شیفت عصر", "شیفت شب"
  Time      String
  employees Employee[]
  reports   Report[]
  createdAt DateTime   @default(now())
}

model Report {
  id         Int      @id @default(autoincrement())
  status     String // "حاضر", "غایب", "مرخصی", "تأخیر"
  hours      Float // e.g. 8, 7.5, 0
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId Int
  shift      Shift    @relation(fields: [shiftId], references: [id])
  shiftId    Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([employeeId, shiftId]) // For faster queries
}

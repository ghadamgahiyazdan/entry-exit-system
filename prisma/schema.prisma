generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Employee {
  id         Int      @id @default(autoincrement())
  name       String
  employeeId String   @unique
  shifts     Shift[]  // Relationship to shifts
  reports    Report[] // Relationship to reports
  createdAt  DateTime @default(now())
}

model Shift {
  id          Int       @id @default(autoincrement())
  title       String
  time   String
  employees   Employee[] // Many-to-many relationship with Employee
  reports     Report[]   // Relationship to reports
}

model Report {
  id          Int       @id @default(autoincrement())
  description String?
  employee    Employee  @relation(fields: [employeeId], references: [id])
  employeeId  Int
  shift       Shift     @relation(fields: [shiftId], references: [id])
  shiftId     Int
  ready       Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}